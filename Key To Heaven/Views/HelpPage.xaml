<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyToHeaven.Views.HelpPage">

    <ScrollView BackgroundColor="White">
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <HorizontalStackLayout Spacing="10">
                <ImageButton Source="backicon.png" HeightRequest="20" WidthRequest="20" Scale="0.6"
                             Clicked="OnBackButtonClicked"/>
                <Label Text="Help Center" FontSize="24" FontAttributes="Bold" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- FAQs Section -->
            <Label Text="Frequently Asked Questions" FontSize="18" FontAttributes="Bold" />

            <Border BackgroundColor="#F9F9F9" StrokeShape="RoundRectangle 15" Padding="15" >
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ”¹ How do I reset my password?" FontSize="16" FontAttributes="Bold" />
                    <Label Text="Go to settings > account > reset password and follow the instructions." FontSize="14" TextColor="Gray"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,10"/>

                    <Label Text="ðŸ”¹ How can I report a bug?" FontSize="16" FontAttributes="Bold" />
                    <Label Text="Navigate to Settings > Feedback > Report and describe the issue." FontSize="14" TextColor="Gray"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,10"/>

                    <Label Text="ðŸ”¹ Can I use the app offline?" FontSize="16" FontAttributes="Bold" />
                    <Label Text="Yes, some features are available offline. Full access requires an internet connection." FontSize="14" TextColor="Gray"/>
                </VerticalStackLayout>
            </Border>

            <!-- Contact Support Section -->
            <Label Text="Need More Help?" FontSize="18" FontAttributes="Bold" />

            <Border BackgroundColor="#F9F9F9" StrokeShape="RoundRectangle 15" Padding="15" >
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“§ keytoheavean@gmail.com" FontSize="16" />
                    <Button Text="Contact Support" Clicked="OnContactSupportClicked" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
