<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyToHeaven.MainPage"
             BackgroundColor="#F3F3F3">

    <VerticalStackLayout Spacing="20" Padding="15">
        <!-- Title or Heading -->
        <Label Text="Click Counter"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <!-- Click Counter Label -->
        <Label x:Name="CounterLabel" Text="Clicked 0 times" FontSize="24" HorizontalOptions="Center" />

        <!-- Button to increment count -->
        <Button x:Name="CounterBtn" Text="Click me (0)" Clicked="OnCounterClicked" />
    </VerticalStackLayout>
</ContentPage>
